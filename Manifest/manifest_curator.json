{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "version": "1.0.0",
  "id": "a1961453-dc9d-4e37-84cf-6173be4db120",
  "packageName": "com.microsoft.teams.submitidea",
  "developer": {
    "name": "<company name>",
    "websiteUrl": "<website url>",
    "privacyUrl": "<website url>/privacy",
    "termsOfUseUrl": "<website url>/termsofuse"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Great Ideas Curator",
    "full": "Great Ideas Curator"
  },
  "description": {
    "short": "The app encourages innovation by letting users submit and share ideas with peers",
    "full": "Great Ideas app is an innovation challenge system that lets employees submit and share ideas and insights, with voting right within Microsoft Teams. Employees can submit an idea in a selected category to be visible to all colleagues and leadership, ideas can be voted upon and a leader board of best idea contributors can be shared."
  }
  "accentColor": "#7BFFFE",
  "bots": [
    {
      "botId": "<<botId>>",
      "scopes": [
        "team"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "<<azureFdUrl>>/curator-config-tab",
      "canUpdateConfiguration": true,
      "scopes": [
        "team"
      ]
    }
  ],
  "composeExtensions": [
    {
      "botId": "<<botId>>",
      "canUpdateConfiguration": false,
      "commands": [
        {
          "id": "AllIdeas",
          "type": "query",
          "title": "All",
          "description": "Search all ideas",
          "parameters": [
            {
              "name": "searchText",
              "title": "Search",
              "description": "Search"
            }
          ],
          "context": [
            "compose"
          ],
          "initialRun": true
        },
        {
          "id": "Pending",
          "type": "query",
          "title": "Submitted",
          "description": "Search pending ideas",
          "parameters": [
            {
              "name": "searchText",
              "title": "Search",
              "description": "Search"
            }
          ],
          "context": [
            "compose"
          ],
          "initialRun": true
        },
        {
          "id": "Approved",
          "type": "query",
          "title": "Posted",
          "description": "Search approved ideas",
          "parameters": [
            {
              "name": "searchText",
              "title": "Search",
              "description": "Search"
            }
          ],
          "context": [
            "compose"
          ],
          "initialRun": true
        }
      ]
    }
  ],
  "validDomains": [
   "<<appDomain>>"
  ],
  "webApplicationInfo": {
    "id": "<<botId>>",
    "resource": "<ApplicationIdURI>"
  }
}